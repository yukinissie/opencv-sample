  "dependencies": {
    "@u4/opencv4nodejs": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.4.0",
    "@vitest/coverage-v8": "^2.0.5",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
